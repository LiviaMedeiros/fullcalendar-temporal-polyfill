{
  "name": "temporal-workspace",
  "version": "0.0.0",
  "title": "Temporal Workspace",
  "author": {
    "name": "Adam Shaw",
    "email": "arshaw@users.noreply.github.com",
    "url": "http://arshaw.com/"
  },
  "contributors": [
    {
      "name": "Ishaan Bharal",
      "email": "ishbharal@gmail.com"
    }
  ],
  "copyright": "2021 Adam Shaw",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "clean": "yarn workspaces foreach -ptv --no-private run clean",
    "clean:pkg": "cd $INIT_CWD && ${PROJECT_CWD}/scripts/clean-pkg.sh",
    "build": "./scripts/build.sh",
    "build:pkg": "cd $INIT_CWD && ${PROJECT_CWD}/scripts/build-pkg.sh",
    "watch": "./scripts/watch.sh",
    "watch:pkg": "cd $INIT_CWD && ${PROJECT_CWD}/scripts/watch-pkg.sh",
    "types:build": "yarn run tsc -b",
    "types:build:pkg": "cd $INIT_CWD && yarn run tsc -p",
    "types:watch": "yarn run tsc -b --watch",
    "types:watch:pkg": "cd $INIT_CWD && yarn run tsc -p --watch",
    "types:bundle": "yarn workspaces foreach -ptv --no-private run bundle",
    "types:bundle:pkg": "cd $INIT_CWD && ${PROJECT_CWD}/scripts/types-bundle-pkg.sh",
    "js:build": "yarn workspaces foreach -ptv --no-private run js:build",
    "js:build:pkg": "cd $INIT_CWD && ${PROJECT_CWD}/scripts/js-build-pkg.cjs",
    "js:watch": "yarn workspaces foreach -piv --no-private run js:watch",
    "js:watch:pkg": "cd $INIT_CWD && ${PROJECT_CWD}/scripts/js-build-pkg.cjs --watch",
    "js:minify": "yarn workspaces foreach -ptv --no-private run js:minify",
    "js:minify:pkg": "cd $INIT_CWD && ${PROJECT_CWD}/scripts/js-minify-pkg.sh",
    "size": "yarn workspaces foreach -ptv --no-private size",
    "size:pkg": "cd $INIT_CWD && ${PROJECT_CWD}/scripts/size-pkg.sh",
    "test": "jest --coverage",
    "dev": "jest --watch",
    "lint": "eslint --ignore-path .gitignore .",
    "locales-scrape": "./scripts/locales-scrape.cjs",
    "locales-compile": "yarn workspaces foreach -ptv run locales-compile"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "colors": "^1.4.0",
    "concurrently": "^6.2.1",
    "deepmerge": "^4.2.2",
    "esbuild": "^0.12.9",
    "eslint": "^7.25.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.0.4",
    "rollup": "^2.55.1",
    "rollup-plugin-dts": "^3.0.2",
    "typescript": "^4.3.5",
    "yargs": "^17.0.1"
  }
}
