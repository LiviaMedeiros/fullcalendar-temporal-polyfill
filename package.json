{
  "name": "temporal-workspace",
  "version": "0.0.0",
  "title": "Temporal Workspace",
  "author": {
    "name": "Adam Shaw",
    "email": "arshaw@users.noreply.github.com",
    "url": "http://arshaw.com/"
  },
  "contributors": [
    {
      "name": "Ishaan Bharal",
      "email": "ishbharal@gmail.com"
    }
  ],
  "copyright": "2021 Adam Shaw",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "clean:pkg": "cd $INIT_CWD && rm -rf dist tsconfig.tsbuildinfo e2e/tsconfig.tsbuildinfo",
    "dts-bundle:pkg": "cd $INIT_CWD && rollup -c ../../rollup.config.js && yarn run dts-prune:pkg",
    "dts-prune:pkg": "cd $INIT_CWD && echo 'Removing extra declarations...' && rm -f dist/?(!(index)).d.ts || true",
    "esbuild:pkg": "cd $INIT_CWD && node ../../scripts/esbuild.cjs",
    "gzip-size:pkg": "cd $INIT_CWD && gzip -c -r dist/index.min.js | wc -c | numfmt --to=iec-i --suffix=B",
    "clean": "yarn workspaces foreach run clean:pkg",
    "tsc": "tsc -b",
    "dts-bundle": "yarn tsc && yarn workspaces foreach --no-private -tv run dts-bundle:pkg",
    "esbuild": "yarn workspaces foreach --no-private -ptv run esbuild:pkg",
    "build": "yarn dts-bundle && yarn esbuild",
    "gzip-size": "yarn workspaces foreach --no-private -v run gzip-size:pkg",
    "test": "jest --coverage",
    "dev": "jest --watch",
    "lint": "eslint --ignore-path .gitignore .",
    "locales-scrape": "node ./scripts/locales-scrape.cjs",
    "locales-compile": "yarn workspaces foreach -ptv run locales-compile"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "colors": "^1.4.0",
    "deepmerge": "^4.2.2",
    "esbuild": "^0.12.9",
    "eslint": "^7.25.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.0.4",
    "rollup": "^2.55.1",
    "rollup-plugin-dts": "^3.0.2",
    "typescript": "^4.3.5",
    "yargs": "^17.0.1"
  }
}
