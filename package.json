{
  "name": "temporal-lite",
  "version": "0.0.0",
  "title": "Temporal Lite",
  "description": "A new JavaScript date library",
  "author": {
    "name": "Ishaan Bharal",
    "email": "ishbharal@gmail.com"
  },
  "contributors": [
    {
      "name": "Adam Shaw",
      "email": "arshaw@users.noreply.github.com",
      "url": "http://arshaw.com/"
    }
  ],
  "copyright": "2021 Adam Shaw",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "yarn workspaces foreach run clean",
    "tsc": "tsc -b",
    "esbuild": "yarn workspaces foreach -ptvi run esbuild",
    "build": "yarn clean && yarn tsc && yarn esbuild",
    "gzip:size": "yarn workspaces foreach -vi run gzip:size",
    "test": "jest --coverage",
    "dev": "jest --watch",
    "lint": "eslint packages/*/src/**/*.ts --fix",
    "write:locales": "node ./scripts/write-locales.mjs",
    "write": "yarn run write:locales && yarn workspaces foreach -v run write"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "esbuild": "^0.12.9",
    "eslint": "^7.25.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^3.4.0",
    "jest": "^27.0.4",
    "prettier": "^2.2.1",
    "typescript": "^4.3.2"
  }
}
