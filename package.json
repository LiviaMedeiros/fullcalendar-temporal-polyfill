{
  "name": "temporal-workspace",
  "version": "0.0.0",
  "title": "Temporal Workspace",
  "author": {
    "name": "Adam Shaw",
    "email": "arshaw@users.noreply.github.com",
    "url": "http://arshaw.com/"
  },
  "contributors": [
    {
      "name": "Ishaan Bharal",
      "email": "ishbharal@gmail.com"
    }
  ],
  "copyright": "2021 Adam Shaw",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "clean": "yarn workspaces foreach -pv --exclude temporal-workspace run pkg:clean",
    "build": "tsc --build && yarn run bundle-release",
    "watch": "concurrently 'tsc --build --watch' 'yarn run bundle-watch'",
    "bundle-release": "yarn workspaces foreach -pv --exclude temporal-workspace run pkg:bundle-release",
    "bundle-watch": "yarn workspaces foreach -pvi --exclude temporal-workspace run pkg:bundle-watch",
    "size": "yarn workspaces foreach -p --exclude temporal-workspace run pkg:size",
    "pkg:clean": "cd $INIT_CWD && node $PROJECT_CWD/scripts/pkg-clean.cjs",
    "pkg:build": "cd $INIT_CWD && tsc --build && yarn run pkg:bundle-release",
    "pkg:watch": "cd $INIT_CWD && concurrently 'tsc --build --watch' 'yarn run pkg:bundle-watch'",
    "pkg:bundle-release": "cd $INIT_CWD && node $PROJECT_CWD/scripts/pkg-bundle.cjs",
    "pkg:bundle-watch": "cd $INIT_CWD && node $PROJECT_CWD/scripts/pkg-bundle.cjs --watch",
    "pkg:size": "cd $INIT_CWD && node $PROJECT_CWD/scripts/pkg-size.cjs",
    "test": "jest --coverage",
    "dev": "jest --watch",
    "lint": "eslint --ignore-path .gitignore .",
    "locales-scrape": "./scripts/locales-scrape.cjs",
    "locales-compile": "yarn workspaces foreach -pv run locales-compile"
  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "colors": "^1.4.0",
    "concurrently": "^6.2.1",
    "deepmerge": "^4.2.2",
    "esbuild": "^0.12.9",
    "eslint": "^7.25.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.0.4",
    "rollup": "^2.55.1",
    "rollup-plugin-dts": "^3.0.2",
    "typescript": "^4.3.5",
    "yargs": "^17.0.1"
  }
}
