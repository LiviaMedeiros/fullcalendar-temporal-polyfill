{
  "name": "root",
  "private": true,
  "author": {
    "name": "Adam Shaw",
    "email": "arshaw@users.noreply.github.com",
    "url": "http://arshaw.com/"
  },
  "contributors": [
    {
      "name": "Ishaan Bharal",
      "email": "ishbharal@gmail.com"
    }
  ],
  "copyright": "2021 Adam Shaw",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "clean": "yarn workspaces foreach -pvi --exclude root run pkg:clean",
    "build": "yall -s types bundle-types bundle-js",
    "watch": "yall -p types bundle-js --watch",
    "types": "tsc --build",
    "bundle-types": "yarn workspaces foreach -pvi --exclude root run pkg:bundle-types",
    "bundle-js": "yarn workspaces foreach -pvi --exclude root run pkg:bundle-js",
    "test": "jest",
    "lint": "eslint .",
    "size": "yarn workspaces foreach -p --exclude root run pkg:size",
    "pkg:clean": "cd $INIT_CWD && node $PROJECT_CWD/scripts/pkg-clean.cjs",
    "pkg:build": "cd $INIT_CWD && yall -s pkg:types pkg:bundle-types pkg:bundle-js",
    "pkg:watch": "cd $INIT_CWD && yall -p pkg:types pkg:bundle-js --watch",
    "pkg:types": "cd $INIT_CWD && tsc --build",
    "pkg:bundle-types": "cd $INIT_CWD && node $PROJECT_CWD/scripts/pkg-bundle-types.cjs",
    "pkg:bundle-js": "cd $INIT_CWD && node $PROJECT_CWD/scripts/pkg-bundle-js.cjs",
    "pkg:test": "cd $INIT_CWD && jest",
    "pkg:lint": "eslint $INIT_CWD",
    "pkg:size": "cd $INIT_CWD && node $PROJECT_CWD/scripts/pkg-size.cjs",
    "locales-scrape": "node ./scripts/locales-scrape.cjs",
    "locales-compile": "yarn workspaces foreach -pvi run locales-compile"
  },
  "devDependencies": {
    "@arshaw/yall": "^1.2.0",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@types/jest": "^26.0.23",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "colors": "^1.4.0",
    "deepmerge": "^4.2.2",
    "esbuild": "^0.12.9",
    "eslint": "^7.25.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-import-resolver-node": "^0.3.6",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^27.0.4",
    "rollup": "^2.55.1",
    "rollup-plugin-dts": "^3.0.2",
    "shelljs": "^0.8.4",
    "shelljs-live": "^0.0.1",
    "terser": "^5.8.0",
    "typescript": "^4.3.5",
    "yargs": "^17.0.1"
  }
}
