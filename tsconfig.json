{
  "extends": "@tsconfig/node14/tsconfig.json",
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "dist",
    "baseUrl": ".",
    "inlineSourceMap": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "include": ["packages/**/*"],
  "exclude": ["dist", "packages/**/*.test.ts"]
}
