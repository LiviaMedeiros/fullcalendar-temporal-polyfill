{
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2020",
    "lib": ["ES2020"],
    "moduleResolution": "Node",
    "outDir": "dist",
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "inlineSourceMap": true
  },
  "exclude": ["packages/*/dist", "packages/*/src/**/*.test.ts"]
}
